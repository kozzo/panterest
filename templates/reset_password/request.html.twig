{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="text-center my-5">Réinitialiser votre mot de passe</h1>
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
            <div class="mb-3">
                <small>
                    Renseignez votre addresse email et vous recevrez un lien pour 
                    réinitialiser votre mot de passe.
                </small>
            </div>
        <div class="text-center">
            <button class="btn btn-primary">Envoyer l'email de réinitialisation</button>
        </div>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
