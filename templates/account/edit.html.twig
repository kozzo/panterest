{% extends 'layouts/base.html.twig' %}

{% block title %}Modification du compte {% endblock %}
{% block body %}
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1 class="text-center my-5">Modification du compte</h1>
      {{ form_start(form) }}
      <div class="row">
        <div class="col-md-6">
          {{ form_row(form.firstName) }}
        </div>
        <div class="col-md-6">
          {{ form_row(form.lastName) }}
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 mb-2">
          {{ form_rest(form) }}
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary">Modifier le compte</button>
      </div>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
