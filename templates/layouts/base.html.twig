<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}
  </head>
  <body style="background-color:#353535;">
    {% if is_granted('IS_IMPERSONATOR') %}
      <div class="alert alert-info">
        <a class="text-white" href="{{ impersonation_exit_path(path('app_home')) }}">
          Sortir de l'impersonnalisation
        </a>
      </div>
    {% endif %}
    {{ include('layouts/partials/_nav.html.twig') }}
    {{ include('layouts/partials/_flash_messages.html.twig') }}
    <main class="container container-fluid mt-5 text-light">
      {% block body %}{% endblock %}
    </main>
    {{ include('layouts/partials/_footer.html.twig') }}
  </body>
  {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
  {% endblock %}
</html>
